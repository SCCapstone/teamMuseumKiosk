<GridPane alignment="center" hgap="0" stylesheets="/design/trivia.css" vgap="30" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.StartController">


        <Label id="title" fx:id="label" alignment="CENTER" stylesheets="/design/trivia.css" text="How Well Do You Know SC?" textAlignment="CENTER" GridPane.rowIndex="1" />

        <Label id="directions" alignment="CENTER" text="Before you start, we need some information" GridPane.rowIndex="2" />

    <HBox alignment="CENTER" spacing="50" GridPane.rowIndex="3">

        <Label id="nameLabel" text="Player Initials:" textAlignment="CENTER" />

        <TextField id="nameField" fx:id="name" onAction="#buttonClick" promptText="Player Initials:" />
        <Text fx:id="missingInfoText" fill="#c31111" strokeType="OUTSIDE" strokeWidth="0.0" GridPane.rowIndex="8" />

    </HBox>

    <HBox alignment="CENTER" spacing="50" GridPane.rowIndex="5">

        <Label id="emailLabel" text="Email:" textAlignment="CENTER" />

        <TextField id="emailField" fx:id="email" onAction="#buttonClick" promptText="Email:" />

    </HBox>

    <HBox spacing="10" GridPane.rowIndex="7">

        <Button fx:id="button" alignment="CENTER" onAction="#buttonClick" text="Play" />

        <VBox spacing="5">
            <Label text="By selecting 'Play' you are agreeing to receive" />
            <Label text="Newsletters from the State Museum." />
        </VBox>
    </HBox>

    <Button alignment="BOTTOM_RIGHT" onAction="#goToAdminPage" text="Admin" GridPane.columnIndex="10" GridPane.rowIndex="9" />
   <ImageView fx:id="imageView" fitHeight="106.0" fitWidth="495.0" pickOnBounds="true" GridPane.rowIndex="10" />
