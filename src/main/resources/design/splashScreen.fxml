<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane alignment="center" hgap="0" stylesheets="/design/splashScreen.css" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.SplashController">
   <ImageView fx:id="image" fitHeight="893.0" fitWidth="1440.0" pickOnBounds="true" preserveRatio="true" />

    <!-- Made title a button so entire screen is clickable. If someone knows a better way, feel free to change this.-->
    <Button id="titleButton" alignment="CENTER" onAction="#buttonClick" prefHeight="17.0" prefWidth="1440.0" text="How Well Do You Know South Carolina?" textAlignment="CENTER" GridPane.rowIndex="0" />
    <HBox alignment="TOP_CENTER" spacing="10" GridPane.rowIndex="1">

    </HBox>
    <HBox alignment="BOTTOM_CENTER" spacing="10" GridPane.rowIndex="2">
        <Label id="instructions" alignment="CENTER" text="Touch Screen to Start" textAlignment="CENTER" />
    </HBox>

    <Button id="splashPlayButton" alignment="CENTER" onAction="#buttonClick" prefHeight="900.0" prefWidth="1440.0" />
   <columnConstraints>
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
</GridPane>
