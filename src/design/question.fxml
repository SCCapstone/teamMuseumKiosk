<BorderPane xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.QuestionController">
    <top>
        <Label fx:id="prompt" alignment="CENTER" maxHeight="19.0" maxWidth="550.0" prefHeight="19.0" prefWidth="550.0" textAlignment="CENTER" textFill="#1d1d1d" wrapText="true" BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets bottom="20.0" left="10.0" right="10.0" top="20.0" />
            </BorderPane.margin>
            <font>
                <Font name="Geneva" size="14.0" />
            </font>
        </Label>
    </top>
    <center>
        <GridPane alignment="CENTER" BorderPane.alignment="CENTER">
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" />
            </rowConstraints>
            <Button fx:id="button1" alignment="CENTER" onAction="#buttonClick" prefHeight="100.0" prefWidth="600.0" textAlignment="CENTER" wrapText="true" GridPane.hgrow="NEVER" GridPane.rowIndex="0" GridPane.vgrow="NEVER">
                <font>
                    <Font size="16.0" />
                </font>
            </Button>
            <Button fx:id="button2" alignment="CENTER" onAction="#buttonClick" prefHeight="100.0" prefWidth="600.0" textAlignment="CENTER" wrapText="true" GridPane.hgrow="NEVER" GridPane.rowIndex="1" GridPane.vgrow="NEVER">
                <font>
                    <Font size="16.0" />
                </font>
            </Button>
            <Button fx:id="button3" alignment="CENTER" onAction="#buttonClick" prefHeight="100.0" prefWidth="600.0" textAlignment="CENTER" wrapText="true" GridPane.hgrow="NEVER" GridPane.rowIndex="2" GridPane.vgrow="NEVER">
                <font>
                    <Font size="16.0" />
                </font>
            </Button>
            <Button fx:id="button4" alignment="CENTER" onAction="#buttonClick" prefHeight="100.0" prefWidth="600.0" textAlignment="CENTER" wrapText="true" GridPane.hgrow="NEVER" GridPane.rowIndex="3" GridPane.vgrow="NEVER">
                <font>
                    <Font size="16.0" />
                </font>
            </Button>
            <columnConstraints>
                <ColumnConstraints />
            </columnConstraints>
            <BorderPane.margin>
                <Insets />
            </BorderPane.margin>
        </GridPane>
    </center>
    <bottom>
        <GridPane prefHeight="43.0" prefWidth="600.0" BorderPane.alignment="CENTER">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <Label fx:id="questionNum" alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" text="Question 1" textAlignment="CENTER" wrapText="true" GridPane.columnIndex="1">
                <font>
                    <Font size="14.0" />
                </font>
            </Label>
            <Label fx:id="score" alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" text="Score: 0" textAlignment="CENTER" wrapText="true">
                <font>
                    <Font size="14.0" />
                </font>
            </Label>
        </GridPane>
    </bottom>
</BorderPane>
